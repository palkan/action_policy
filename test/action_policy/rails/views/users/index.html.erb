<% authorized_scope(@users, with: UserPolicy, type: :data).each do |user| %>
  <li><%= user.name %> (<%= allowed_to?(:edit?, user) ? "editable" : "read-only" %>)</li>
<% end %>
<% if allowed_to?(:create?) %>
  <button>Create User</button>
<% end %>

<% result = allowance_to(:create?, with: UserPolicy) %>
<%= result.rule %> - <%= result.value %>
